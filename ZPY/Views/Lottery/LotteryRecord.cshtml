@using ProEntity
@{
    ViewBag.Title = "LotteryRecord";
    Layout = null;
}


<!DOCTYPE html>
<html>
	<head>
		<meta http-equiv="content-type" content="text/html" charset="utf-8" />
		<meta charset="UTF-8">
		<title>游戏平台 - 投注记录</title>
		<link rel="stylesheet" type="text/css" href="/modules/css/help.css" />
		<link rel="stylesheet" type="text/css" href="/modules/css/need/laydate.css" />
	    <link rel="stylesheet" type="text/css" href="/modules/css/skins/dahong/laydate.css"/>
           <link rel="stylesheet" type="text/css" href="/modules/datapager/style.css"/>
        <script type="text/javascript" src="/Scripts/jquery-1.11.3.min.js"></script> 
		<script type="text/javascript" src="/Scripts/laydate.js"></script>
	    <script type="text/javascript" src="/Scripts/date.js"></script>
         <script type="text/javascript" src="/modules/datapager/paginate.js"></script> 
		<style>
			div,p,span,dl,dt,dd,a,table,tr,td,thead,th,tbody{margin: 0;padding: 0;list-style: none;}
		</style>
	</head>
	<body>
		<div class="p-header">
			<p class="current-location">
				<span>当前位置：</span><span> &gt; 投注记录</span>
			</p>
		</div>
		<div class="chooseRecords">
			<div class="filter"> 
				<label for="starttime">
					<span class="text-middle-input">活动时间：</span>
					<input type="text" class="start-time input laydate-icon" value="" style="width: 220px;"  onClick="laydate({istime: true, format: 'YYYY-MM-DD hh:mm:ss'})"/> 
					<span class="text-middle-input">&nbsp;至&nbsp;</span>
					<input type="text" class="endtime input laydate-icon" value="" style="width: 220px;" onClick="laydate({istime: true, format: 'YYYY-MM-DD hh:mm:ss'})"/> 
				</label>
				<label for="status">
					<span class="text-middle-input">状态：</span>
					<select class="input state" id="status">
						<option value="-1" selected="">全部</option>
						<option value="1">已中奖</option>
						<option value="2">未中奖</option>
						<option value="0">未开奖</option>
						<option value="3">已撤单</option>
					</select>
				</label>
				<label for="usetype">
					<span class="text-middle-input">奖金：</span>
					<select class="input state" id="usetype">
						<option value="0" selected="selected">全部</option>
						<option value="1">现金</option>
						<option value="2">优惠券</option>
					</select>
				</label>
				<label for="gamemodel">
					<span class="text-middle-input">游戏名称：</span>
				    <select class="input gamemodel" id="lotteryslt" style="width: 130px;">
                         <option value="">所有游戏</option>
                         @foreach (Lottery model in ExpandClass.GetLottery(HttpContext.Current))
                             {
                                 <option value="@(model.CPCode)">@(model.CPName)</option>
                             }
				    </select>
				</label>
				<label for="gametype">
					<span class="text-middle-input">游戏玩法：</span>
					<select class="input gametype"  id="lotteryplays">
						<option value="">所有玩法</option>
					</select>
				</label>
				<label for="gametype">
					<span class="text-middle-input">游戏奖期：</span>
					<select class="input gametype" name="issue" id="issueslt">
						<option value="">所有奖期</option>
					</select>
				</label> 
				<label for="orderid">
					<span class="text-middle-input">注单编号：</span>
					<input class="input orderid" id="lcode"/>
				</label>
			@*	<label for="gameuser">
					<span class="text-middle-input">游戏用户：</span>
					<input class="input gameuser" id="username" name="username" value/>
				</label>*@
				<label for="selfrange">
					<span class="text-middle-input">范围：</span>
					<select class="input gameuser" id="selfrange">
						<option  value="-1">全部</option>
						<option value="0">自己</option>
						<option value="1">直接下级</option>
						<option value="2">所有下级</option>
					</select>
				</label>
			@*	<label for="gameuser">
					&nbsp;&nbsp;&nbsp;&nbsp;
					<span style="color: #FF7E00;">温馨提示：点击注单编号可以查看详细注单信息以及撤单</span>
				</label>*@
				<div class="filter-button-box">
						<div class="search">搜索</div>
						<a href="/Lottery/LotteryRecord" target="_self" style="color: white;">
							<div class="clear">清空</div>
						</a>
					</div>
 
			</div>
		
		
			<div class="content">
			    <div class="data">
			    	<table class="data-table" cellspacing="0">
			    		<thead>
			    			<tr>
			    				<th class="th-1" style="width: 6%;">注单编号</th>
			    				<th class="th-2" style="width: 6%;">用户</th>
			    				<th class="th-3" style="width: 11%;">投注时间</th>
			    				<th class="th-4" style="width: 7%;">游戏</th>
			    				<th class="th-5" style="width: 7%;">玩法</th>
			    				<th class="th-6" style="width: 7%;">期号</th>
			    				<th class="th-7" style="width: 11%;">投注内容</th>
			    				<th class="th-8" style="width: 6%;">倍数</th>
			    				<th class="th-9" style="width: 6%;">模式</th>
			    				<th class="th-10" style="width: 10%;">总金额</th>
			    				<th class="th-11" style="width: 10%;">奖金</th>
			    				<th class="th-12" style="width: 10%;">开奖号</th>
			    				<th class="th-13" style="width: 6%;">状态</th>
			    			</tr>
			    		</thead>
			    		<tbody>
			    			<tr>
			    				<td>注单编号</td><td>用户</td><td>投注时间</td><td>游戏</td><td>玩法</td><td>期号</td><td>投注内容</td>
			    				<td>倍数</td><td>模式</td><td>总金额</td><td>奖金</td><td>开奖号</td><td>状态</td>
			    			</tr>
			    			<tr>
			    				<td height="37" colspan="13" style="text-align: center;" class="needq">
			    					<span>请选择查询条件之后进行查询</span>
			    				</td>
			    			</tr>
			    		</tbody>
			    		<tfoot>
			    			<tr>
						        <td colspan="13" style="text-align: center;">
						             <div class="spana" id="pager"></div>
						        </td>
			    			</tr>
			    		</tfoot>
			    	</table>
			    </div>	
			</div>
		</div> 
	</body>
<script type="text/javascript" src="/modules/scripts/lottery/lotteryrecord.js"></script>
</html>

